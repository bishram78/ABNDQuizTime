    <!-- Question answer part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/background_image_480" />

        <TextView
            android:id="@+id/id_am_tv_quiz_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="QuizTime"
            android:textColor="#FFF"
            android:textSize="56sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_am_tv_shoak_se_khelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="142dp"
            android:text="Play like a game"
            android:textColor="#FFF"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/im1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/background_image_480" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55ff008c" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"
                android:text="Who is our (Current Indian) Prime Minister?"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#123"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="Mahatma Gandhi"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="Pandit Jawaharlal Nehru" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="Narendra Damodar Das Modi" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="#FFF"
                    android:text="Dr. Sarbpalli Radhakrishnann" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="sans-serif-condensed"
                android:text="Save &amp; Next"
                tools:targetApi="jelly_bean" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="Hi! Bishram Munda"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Time elapsed - 08:56 minutes"
        android:textColor="#FFF"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>