<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="ScrollStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">1dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">1dp</item>
        <item name="android:background">#EAEAEA</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="QuestionTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/_24dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">24dp</item>
        <item name="android:paddingLeft">@dimen/_24dp</item>
        <item name="android:paddingRight">@dimen/_24dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">24dp</item>
        <item name="android:paddingTop">@dimen/_36dp</item>
        <item name="android:textColor">#FF008C</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="RadioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackFF</item>
    </style>

    <style name="LinearForQO">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#EEEeee</item>
    </style>

    <style name="LinearForCheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/_24dp</item>
    </style>

    <style name="CheckboxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackFF</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/_24dp</item>
        <item name="android:layout_marginLeft">@dimen/_24dp</item>
        <item name="android:layout_marginRight">@dimen/_24dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/_24dp</item>
    </style>

    <style name="CheckboxStyleTop" parent="CheckboxStyle">
        <item name="android:layout_marginTop">@dimen/_24dp</item>
    </style>

    <style name="CheckboxStyleBottom" parent="CheckboxStyle">
        <item name="android:layout_marginBottom">@dimen/_24dp</item>
    </style>

    <style name="LinearSNWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/_24dp</item>
    </style>

    <style name="LinearForSerialNo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="SerialNoStyle">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/serial_no_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="SerialNoNameTV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EnterAnswerET">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EnterAnswerET24M" parent="EnterAnswerET">
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="SaveNextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">24dp</item>
        <item name="android:background">@drawable/round_bkg_start_button</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
